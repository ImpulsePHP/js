{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2021", "DOM"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
  ]
}
